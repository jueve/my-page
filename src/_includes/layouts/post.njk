{% extends "layouts/base.njk" %}}

{% block head %}
<title>{{ title }}</title>
{% endblock %}

{% block content %}
<article>
    <div class="content">
        <div class="block">
            <h1>
                {{ title }}
            </h1>
        </div>
        <div class="block">
            <div class="datetime={{ post.date.date | date('DATETIME') }}">
                {{ date | date('HUMAN_DATE') }}
            </div>
        </div>
        <div class="block">
            <div class="content">
                {{ content | safe}}
            </div>
        </div>
    </div>
</article>
{% endblock %}
